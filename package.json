{
  "name": "ant",
  "version": "1.0.0",
  "description": "Generic query manager.",
  "main": "dist/index.js",
  "scripts": {
    "build": "./node_modules/typescript/bin/tsc --build src.tsconfig.commonjs.json",
    "build-and-test": "npm run build && npm run test-only",
    "build-and-test-debug": "npm run build && npm run test-debug-only",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test": "npm run test-docker",
    "test-debug": "npm run test-docker-debug",
    "test-docker": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit --exit-code-from ant_lib",
    "test-docker-debug": "docker-compose -f docker-compose.test.debug.yml up --abort-on-container-exit --exit-code-from ant_lib",
    "test-debug-only": "node --inspect-brk=0.0.0.0:${NODE_DEBUG_PORT_INNER} ./node_modules/jasmine/bin/jasmine.js ./dist/test/main.test.js",
    "test-only": "node_modules/nyc/bin/nyc.js --reporter=lcov node ./node_modules/jasmine/bin/jasmine.js ./dist/test/main.test.js"
  },
  "author": "Roberto Pintos LÃ³pez",
  "license": "ISC",
  "devDependencies": {
    "@types/ioredis": "^4.0.7",
    "@types/jasmine": "^3.3.9",
    "@types/node": "^11.9.4",
    "coveralls": "^3.0.3",
    "jasmine": "^3.3.1",
    "nyc": "^13.3.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "ioredis": "^4.6.2"
  }
}
